FROM ubuntu:18.04 AS build
LABEL maintainer="Netflix Open Source Development <talent@netflix.com>"

ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
apt-get install -y software-properties-common && \
add-apt-repository ppa:deadsnakes/ppa -y && \
  apt-get update && \
  apt-get install -y curl git build-essential sudo \
    python3.6 python3-pip python3.6-dev \
    postgresql postgresql-contrib \
    libpq-dev libssl1.0-dev libffi-dev libsasl2-dev libldap2-dev && \
  ln -sf /usr/bin/python3.6 /usr/local/bin/python3 && \
  update-alternatives --install /usr/bin/python python /usr/bin/python3 1 && \
  update-alternatives --install /usr/bin/pip pip /usr/bin/pip3 1

RUN locale-gen en_US.UTF-8

ENV LC_ALL=en_US.UTF-8

ARG LEMUR_VERSION=master
ARG LEMUR_REPO=netflix/lemur
ENV ENV_LEMUR_VERSION=$LEMUR_VERSION ENV_LEMUR_REPO=$LEMUR_REPO

# Install Lemur
RUN git config --global url."https://".insteadOf git:// &&\
  cd /usr/local/src &&\
  git clone https://github.com/${ENV_LEMUR_REPO}.git &&\
  cd lemur &&\
  git checkout ${ENV_LEMUR_VERSION} &&\
  pip install --upgrade pip virtualenv &&\
  export PATH=/usr/local/src/lemur/venv/bin:${PATH} &&\
  virtualenv -p /usr/local/bin/python3 venv &&\
  . venv/bin/activate &&\
  pip install -e .

# Cleanup lemur installation
RUN rm -rf /usr/local/src/lemur.git && \
  rm -rf /usr/local/src/lemur/node_modules && \
  rm -rf /usr/local/src/lemur/bower_components && \
  rm -rf /usr/local/src/lemur/lemur/static

# Build web, this is needed to run the application and deliver all the nodejs stuff
FROM python:3.6-slim AS celery-beat

ARG DEBIAN_FRONTEND=noninteractive
RUN apt update && \
    apt install -y libldap-2.4-2 slapd libpq5 &&\
    apt-get clean -y && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

COPY --from=build --chown=1000:1000 /usr/local/src/lemur /usr/local/src/lemur

COPY --chown=1000:1000 beat-start.sh /usr/local/src/lemur/scripts/beat-start.sh
RUN chmod 0764 /usr/local/src/lemur/scripts/beat-start.sh

USER 1000:1000
ENV PATH="/usr/local/src/lemur/venv/bin:${PATH}"

WORKDIR /usr/local/src/lemur/

CMD ["/usr/local/src/lemur/scripts/beat-start.sh"]
